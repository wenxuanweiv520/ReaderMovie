}
.post-content{
  color:#666;
  font-size: 14px;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 1rpx;    /*文本间距*/
  line-height: 50rpx;
 
}
.post-like{
  flex-direction: row;
  line-height: 16rpx;
  margin-left: 10rpx
  
